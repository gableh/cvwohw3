	
    <%= bootstrap_form_for @todoitem,url: @todoitem.new_record? ? todo_todoitems_path : todo_todoitem_path do |f| %>

	<div class="fields"><%= f.text_field :title, placeholder: "New todo" %></div>
	<div class ="fields"><%= f.text_area :description, placeholder: "Description" %></div>
	<div class="fields"><%= f.datetime_select :due_by,{:include_blank => true,:default =>nil} %></div>
	<div class ="fields"><%= f.text_field :tag_list, placeholder: "Tags" %></div> 
	<%= f.submit %>
	<div>
		<%= link_to '<div class="btn btn-default">Back</div>'.html_safe, todo_todoitems_url(:id =>@todo.id) %>
	</div>
<% end %>