<p id="notice"><%= notice %></p>
<div class ="container1">
<h1>Category Lists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.description %></td>
        <td><%= link_to '<div class = "btn btn-default">Show</div>'.html_safe,todo_todoitems_path(todo.id) %></td>
        
        <td><%= link_to '<div class = "btn btn-default">Edit</div>'.html_safe, edit_todo_path(todo) %></td>
        
        <td><%= link_to '<div class = "btn btn-default">Delete</div>'.html_safe, todo, method: :delete, data: { confirm: 'Are you sure?The list will be permanently deleted!' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<div class = "btn btn-primary">New Category List</div>'.html_safe  , new_todo_path %>
</div>